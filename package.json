{
    "name": "qcolor-visualizer-editor",
    "displayName": "QColor Visualizer & Editor",
    "description": "Visualize and edit PyQt/PySide QColor objects in Python files",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other",
        "Visualization"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "qcolor-visualizer.openColorPicker",
                "title": "Edit QColor"
            }
        ],
        "configuration": {
            "title": "QColor Visualizer & Editor",
            "properties": {
                "qcolorVisualizer.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable QColor visualization"
                },
                "qcolorVisualizer.decorationType": {
                    "type": "string",
                    "enum": [
                        "gutter",
                        "inline"
                    ],
                    "default": "inline",
                    "description": "Where to show color decoration"
                },
                "qcolorVisualizer.colorSampleSize": {
                    "type": "number",
                    "default": 16,
                    "description": "Size of the color sample box (pixels)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "@vscode/test-electron": "^1.6.2",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "ts-loader": "^9.2.5",
        "typescript": "^4.4.3",
        "webpack": "^5.52.1",
        "webpack-cli": "^4.8.0"
    },
    "dependencies": {
        "color-convert": "^2.0.1"
    }
}